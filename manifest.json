{
  "name": "Search Aid",
  "description": "Easier searching",
  "version": "1.0.0.1",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["logic/site_handlers.js", "logic/main.js", "logic/global_utils.js", "background.js"],
    "persistent": false
  },
  "page_action": {
      "default_name": "Search Aid",
      "default_popup": "popup/popup.html",
      "default_icon": "images/marker.png",
      "default_title" : "Search Aid"
  },
  "icons" : {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "64": "images/icon64.png"
  },
  "manifest_version": 2
}